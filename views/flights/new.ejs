<%- include('../partials/header') %>

<br><h5>Add a New Fligth</h5><br>
<form action="/flights" method="POST">
    <label>Airline:
        <select name="airline">
            <option value="American Airlines">American Airlines</option>
            <option value="Delta">Delta</option>
            <option value="Southwest">Southwest</option>
            <option value="Spirit">Spirit</option>
            <option value="United">United</option>
            <option value="Jet Blue">Jet Blue</option>
        </select>
    </label><br>
    <label>Airport:
        <select name="airport">
            <option value="EWR">ERW</option>
            <option value="ATL">ATL</option>
            <option value="AUS">AUS</option>
            <option value="DFW">DFW</option>
            <option value="DEN">DEN</option>
            <option value="LAX">LAX</option>
            <option value="SAN">SAN</option>
            <option value="UIO">UIO</option>
        </select>
    </label><br>
    <label>Flight Number:
        <input type="number" name="flightNo" min="10" max="9999" value ="1000">
    </label><br>
    <label>Flight departs:
        <!-- <input type="datetime" name="departs"  value=<%= (new Date(new Date().setFullYear(new Date().getFullYear() + 1))).toISOString().split('T')[0] %>> -->
        <input type="datetime-local" name="departs">
    </label><br><br>
    <button type="submit" class="btn btn-outline-primary">Add Flight</button>

</form>


<%- include('../partials/footer') %>